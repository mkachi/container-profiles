{
  "manifest_version": 2,
  "name": "Container Profiles",
  "version": "1.0",
  "short_name": "Container Profiles",
  "author": "mkachi",
  "description": "Use Firefox containers like separate profiles. Automatically open tabs in your selected container.",
  "developer": {
    "name": "mkachi",
    "url": "https://github.com/mkachi/container-profiles"
  },
  "icons": {
    "48": "icons/circle-slash-2.svg",
    "96": "icons/circle-slash-2.svg"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Container Profiles",
    "default_icon": "icons/circle-slash-2.svg",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "contextualIdentities",
    "contextMenus",
    "cookies",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}